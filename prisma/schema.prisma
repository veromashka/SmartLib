// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fieldReference"]

}

model Users {
  id        String     @id @default(uuid())
  login     String
  role      Roles      @default(USER)
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  profile   Profiles[]
  orders    Orders[]
}

model Orders {
  id      String  @id @default(uuid())
  paid    Boolean
  user    Users?  @relation(fields: [userId], references: [id])
  userId  String?
  book   Books?  @relation(fields: [bookId], references: [id])
  bookId String?
}

model Profiles {
  id          String @id @default(uuid())
  phoneNumber Int
  age         Int
  country     String
  user        Users  @relation(fields: [userId], references: [id])
  userId      String @unique
}

model Books {
  id          String       @id @default(uuid())
  title       String
  author      String
  releaseYear Int
  category    Categories   @default(FOR_CHILDREN)
  genre       BookGenres[]
  orders      Orders[]
}

model Genres {
  id   String       @id @default(uuid())
  name String
  book BookGenres[]
}

model BookGenres {
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  book      Books     @relation(fields: [bookId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  genre     Genres    @relation(fields: [genreId], references: [id])
  bookId    String
  genreId   String

  @@id([genreId, bookId])
}

enum Categories {
  FOR_CHILDREN
  FOR_TEENS
  FOR_ADULTS
}

enum Roles {
  USER
  EDITOR
  ADMIN
}
